<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Register Page</title>
  <link rel="stylesheet" href="/style.css">
</head>
<body>
  <div id="page-container">
    <h1 style="color: #c6fff3;">Register</h1>

    <% if (errMsg) { %>
      <% errMsg.split(",").forEach(err => { %>
        <p style="color: red;"><%= err %></p>
      <% }) %>
    <% } %>

    <form class="my-form" action="/register" method="post">
      <label for="first_name">First Name</label><br>
      <input type="text" name="first_name" id="first_name"><br>
      <label for="last_name">Last Name</label><br>
      <input type="text" name="last_name" id="last_name"><br>
      <label for="email">Email</label><br>
      <input type="email" name="email" id="email"><br>
      <label for="password">Password</label><br>
      <input type="password" name="password" id="password"><br>
      <button type="submit">Register</button>
    </form>

    <span>Already have an account? <a style="color: white; text-decoration: underline;" href="/login">Login</a></span>
  </div>
</body>
</html>