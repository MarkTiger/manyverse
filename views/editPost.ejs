<form class="my-form" action="/user/post/<%= post.id %>/edit" method="post" enctype="multipart/form-data">
  <h3 style="color: #c6fff3;">Edit Post</h3><br>
  <% if (errMsgs) { %>
    <% errMsgs.split(",").forEach(errMsg => { %>
      <p style="color: red;"><%= errMsg %></p>
    <% }) %>
  <% } %>
  <input type="checkbox" id="isChange" name="isChange" value="true">
  <label for="isChange">Change post cover</label><br>
  <label for="cover">Post Cover (image file): </label><br>
  <input type="file" name="cover" id="cover"><br>
  <label for="message">Post Message: </label><br>
  <textarea name="message" id="message" cols="30" rows="4" placeholder="e.g: Wonderful Indonesia"><%= post.message %></textarea><br>
  <button type="submit">Edit Post</button>
</form>